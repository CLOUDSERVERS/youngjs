{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "no-console": [
      true,
      "log",
      "error"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-classes-per-file": [
      true,
      2,
      "exclude-class-expressions"
    ],
    "trailing-comma": false,
    "indent": [
      true,
      "spaces",
      2
    ]
  }
}
